            ->add('identity')
            ->add('chance')
            ->add('description')
            ->add('workdeliveraddress')
            ->add('subject')
            ->add('accountmanager')
            ->add('status')
            ->add('clientreference')
            ->add('archived')
            ->add('archivedon')
            ->add('extendedproperties')
            ->add('extrapdf1')
            ->add('extrapdf2')
            ->add('files')
            ->add('frequency')
            ->add('expectedterms')
            ->add('sendmaxtimescheckbox')
            ->add('sendmaxtimes')
            ->add('renewautomatically')
            ->add('renewperiods')
            ->add('paymentmethod')
            ->add('tags')
            ->add('employees')
            ->add('employeesStarred')
            ->add('offerlines')
            ->add('_action', null, [
                'actions' => [
                    'show' => [],
                    'edit' => [],
                    'delete' => [],
                ],
            ]);
    }

    protected function configureFormFields(FormMapper $formMapper): void
    {
        $formMapper
            ->add('template')
            ->add('searchname')
            ->add('name')
            ->add('date', DatePickerType::class)
            ->add('validfor')
            ->add('deadline', DatePickerType::class)
