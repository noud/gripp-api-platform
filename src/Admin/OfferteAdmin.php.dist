            ->add('isbasis')
            ->add('totalinclvat')
            ->add('signingenabled')
            ->add('validity')
            ->add('company')
            ->add('contact')
            ->add('identity')
            ->add('chance')
            ->add('description')
            ->add('workdeliveraddress')
            ->add('subject')
            ->add('accountmanager')
            ->add('status')
            ->add('clientreference')
            ->add('archived')
            ->add('archivedon', DatePickerType::class)
            ->add('extendedproperties')
            ->add('extrapdf1')
            ->add('extrapdf2')
            ->add('files')
            ->add('frequency')
            ->add('expectedterms')
            ->add('sendmaxtimescheckbox')
            ->add('sendmaxtimes')
            ->add('renewautomatically')
            ->add('renewperiods')
            ->add('paymentmethod')
            ->add('tags')
            ->add('employees')
            ->add('employeesStarred')
            ->add('offerlines')
            ;
    }

    protected function configureShowFields(ShowMapper $showMapper): void
    {
        $showMapper
            ->add('template')
            ->add('searchname')
            ->add('name')
            ->add('date')
            ->add('validfor')
