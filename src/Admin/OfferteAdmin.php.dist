final class OfferteAdmin extends AbstractAdmin
{

    protected function configureDatagridFilters(DatagridMapper $datagridMapper): void
    {
        $datagridMapper
            ->add('searchname')
            ;
    }

    protected function configureListFields(ListMapper $listMapper): void
    {
        $listMapper
            ->add('template')
            ->add('searchname')
            ->add('name')
            ->add('date')
            ->add('validfor')
            ->add('deadline')
            ->add('number')
            ->add('phase')
            ->add('acceptancestatus')
            ->add('acceptedon')
            ->add('isbasis')
            ->add('totalinclvat')
            ->add('signingenabled')
            ->add('validity')
