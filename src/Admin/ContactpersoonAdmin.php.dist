<?php

declare(strict_types=1);

namespace App\Admin;

use Sonata\AdminBundle\Datagrid\DatagridMapper;
use Sonata\AdminBundle\Datagrid\ListMapper;
use Sonata\AdminBundle\Form\FormMapper;

final class ContactpersoonAdmin extends \App\Admin\AbstractAdmin\AbstractAdmin
{
    public function __construct(
        $code,
        $class,
        $baseControllerName
    ) {
        parent::__construct($code, $class, $baseControllerName, 'name');
    }
    
    protected function configureDatagridFilters(DatagridMapper $datagridMapper): void
    {
        parent::configureDatagridFilters($datagridMapper);
        $datagridMapper
            ->add('company')
            ->add('firstname')
            ->add('lastname')
        ;
    }

    protected function configureListFields(ListMapper $listMapper): void
    {
        parent::configureListFields($listMapper);
        $listMapper
            ->add('active')
            ->add('email', null, [
                'template' => 'bundles/SonataAdminBundle/link_email.html.twig',
            ])
            ->add('name')
            ->add('department')
            ->add('function')
            ->add('company')
            ->add('mobile')
            ->add('phone')
            ->add('tags')
        ;
    }

    protected function configureFormFields(FormMapper $formMapper): void
    {
        $formMapper
            ->add('company')
            ->add('department')
            ->add('function')
            ->add('showoncompanycard')
            ->add('email')
            ->add('active')
            ->add('salutation', \Symfony\Component\Form\Extension\Core\Type\ChoiceType::class, ['choices' => $this->getEnum(strtolower(substr(get_class($this->getSubject()), strrpos(get_class($this->getSubject()), '\\')+1)), 'salutation')])
            ->add('title')
            ->add('initials')
            ->add('firstname')
            ->add('infix')
            ->add('lastname')
            ->add('mobile')
            ->add('phone')
            ->add('dateofbirth', \Sonata\Form\Type\DatePickerType::class)
            ->add('notes')
            ->add('extendedproperties')
            ->add('tags')
        ;
    }
}
